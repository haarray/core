<IfModule mod_rewrite.c>
    Options -MultiViews -Indexes
    RewriteEngine On

    # Serve static assets from /public when app is accessed via /project-folder.
    RewriteRule ^(css|js|icons|storage|uploads)/(.*)$ public/$1/$2 [L]
    RewriteRule ^(favicon\.ico|robots\.txt|manifest\.json|sw\.js)$ public/$1 [L]

    # Existing files/directories should be served directly.
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Route everything else to Laravel root front controller.
    RewriteRule ^ index.php [L]
</IfModule>
